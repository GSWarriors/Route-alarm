<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:id="@+id/linearlayout"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="3"
        android:orientation="vertical"
        android:background="#6697FF">

        <com.soylentispeople.route_alarm.CEditText
            android:id="@+id/departure_location"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="25dp"
            android:hint="departure"
            android:paddingLeft="10dp"
            android:background="@drawable/corner_back"
            android:inputType="text"/>
        <com.soylentispeople.route_alarm.CEditText
            android:id="@+id/arrival_location"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="25dp"
            android:hint="destination"
            android:paddingLeft="10dp"
            android:background="@drawable/corner_back"
            android:inputType="text"/>


    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.soylentispeople.route_alarm.CEditText
            android:id="@+id/time_to_arrive"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="25dp"
            android:hint="time to arrive (hh:mm)"
            android:paddingLeft="10dp"
            android:background="@drawable/corner_white"
            android:inputType="time"
            android:textSize="30dp"
            android:textAlignment="center"/>
        <com.soylentispeople.route_alarm.CEditText
            android:id="@+id/get_ready_time"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="25dp"
            android:hint="time to get ready (min)"
            android:paddingLeft="10dp"
            android:background="@drawable/corner_white"
            android:imeOptions="actionDone"
            android:inputType="time"
            android:textSize="30dp"
            android:textAlignment="center"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Repeat daily"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/set_alarm"
            android:layout_marginTop="25dp"
            android:text="Set Alarm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>