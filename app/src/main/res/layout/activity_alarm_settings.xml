<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:orientation="vertical">

        <com.soylentispeople.route_alarm.CEditText
            android:id="@+id/time_to_arrive"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="8dp"
            android:layout_marginTop="25dp"
            android:hint="I would like to arrive at (hh:mm)"
            android:paddingLeft="10dp"
            android:background="@drawable/corner_white"
            android:inputType="datetime"
            android:textSize="30dp"
            android:textAlignment="center"/>
        <com.soylentispeople.route_alarm.CEditText
            android:id="@+id/get_ready_time"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="25dp"
            android:hint="It'll take me "
            android:paddingLeft="10dp"
            android:background="@drawable/corner_white"
            android:imeOptions="actionDone"
            android:inputType="datetime"
            android:hint2="minutes to get ready "
            android:textSize="30dp"
            android:textAlignment="center"/>

        <CheckBox
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Repeat daily"
            android:textSize="30dp"
            android:layout_marginLeft="10dp"
            />

        <Button
            android:id="@+id/set_alarm"
            android:layout_marginTop="25dp"
            android:text="Set Alarm"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            />
    </LinearLayout>
</LinearLayout>